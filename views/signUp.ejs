<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up - Journey the Nightscape</title>
    <link rel="stylesheet" href="/universal.css" type="text/css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>
<body>
<!-- Invisible hover area to trigger navbar -->
<div id="navbar-hover-area" style="position:fixed;top:0;left:0;width:100vw;height:120px;z-index:9999;"></div>
<header>
    <nav id="navbar" class="navbar" >
      <div class="container-fluid">
        <div class="navbar-section left">
          <span class="navbar-brand mb-0 reddit-logo">
            <img src="leylit.png" alt="NOT Reddit Logo" class="navbar-logo"> Leylit
          </span>
        </div>
        <div class="navbar-section center">
          <div class="search-bar">
            <i class="fas fa-search search-icon"></i>
            <input type="text" placeholder="Search Reddit">
          </div>
        </div>
        <div class="navbar-section right">
          <div class="header-icons">
            <i class="bi bi-plus-lg"></i>
            <i class="bi bi-bullseye"></i>
            <i class="bi bi-chat-dots"></i>
            <i class="fas fa-bell"></i>
            <i class="fas fa-user-circle"></i>
          </div>
        </div>
      </div>
    </nav>
</header>
      <div class="flex flex-col w-screen h-screen-without-header-large dark:bg-global-black">
        <div class="w-screen h-screen-without-header-large flex-grow dark:bg-[#090F11] bg-neutral-background-medium" style="mask-image: url('https://www.redditstatic.com/shreddit/assets/account/standalone-auth-bg.svg'); mask-size: cover; mask-type: alpha;">
        </div>
      </div>

        <% if (typeof success !== 'undefined' && success) { %>
          <div class="container center-container mt-4 text-center d-flex flex-column">
            <div class="card-body">
              <div class="success"><%= success %></div>
              <a href="/" class="btn btn-primary mt-3">Back to login page</a>
            </div>
          </div>
        <% } else { %>
          <form id="register-form" class="form-signin" action="/users" method="POST">
            <div id="container" class="container center-container mt-4 text-center d-flex flex-column">
              <div class="content-wrapper">
                <div class="card-body">
                  <h5 class="card-title"><b>Sign Up</b></h5>
                  <div class="mb-3">
                    <div class="floating-label-group">
                      <input type="text" name="username" class="form-control custom-input uniform-width" placeholder=" " required>
                      <label for="username">Username</label>
                    </div>
                  </div>
                  <div class="mb-3">
                    <div class="floating-label-group">
                      <input type="email" name="email" class="form-control custom-input uniform-width" placeholder=" " required>
                      <label for="email">Email</label>
                    </div>
                  </div>
                  <div class="mb-3">
                    <div class="floating-label-group">
                      <input type="password" name="password" class="form-control custom-input uniform-width" placeholder=" " required>
                      <label for="password">Password</label>
                    </div>
                  </div>
                  <div class="mb-3">
                    <div class="floating-label-group">
                      <input type="text" name="firstName" class="form-control custom-input uniform-width" placeholder=" " required>
                      <label for="firstName">First Name</label>
                    </div>
                  </div>
                  <div class="mb-3">
                    <div class="floating-label-group">
                      <input type="text" name="lastName" class="form-control custom-input uniform-width" placeholder=" " required>
                      <label for="lastName">Last Name</label>
                    </div>
                  </div>
                  <div class="mb-3">
                    <div class="floating-label-group">
                      <textarea name="bio" class="form-control custom-input uniform-width" placeholder="Bio (max 300 chars)" maxlength="300"></textarea>
                      <label for="bio">Bio</label>
                    </div>
                  </div>
                  <div class="mb-3">
                    <label for="avatar">Profile Picture:</label>
                    <input type="file" name="avatar" id="avatar" accept="image/*">
                    <img src="/images/john-doe.png" alt="Default Avatar" style="width:80px;height:80px;margin:10px 0;">
                  </div>
                  <% if (typeof error !== 'undefined' && error) { %>
                    <div class="error"><%= error %></div>
                  <% } %>
                  <div class="mt-2 mb-0">
                    <button type="submit" class="btn btn-secondary uniform-width">Sign Up</button>
                  </div>
                  <div>
                    <p class="btn">Already have an account?<a class="link-opacity-10-hover" href="/"> Log in</a></p>
                  </div>
                </div>
              </div>
            </div>
          </form>
        <% } %>
</body>
</html>
